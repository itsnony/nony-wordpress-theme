{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 3,
  "settings": {
    "appearanceTools": true,
    "color": {
      "palette": [
        {
          "slug": "base",
          "color": "#000000",
          "name": "Base"
        },
        {
          "slug": "contrast",
          "color": "#ffffff",
          "name": "Contrast"
        },
        {
          "slug": "pink",
          "color": "#ffb6d9",
          "name": "Pink"
        },
        {
          "slug": "purple",
          "color": "#d4a5ff",
          "name": "Purple"
        },
        {
          "slug": "blue",
          "color": "#a8d8ff",
          "name": "Blue"
        },
        {
          "slug": "pink-dark",
          "color": "#f472b6",
          "name": "Pink Dark"
        },
        {
          "slug": "purple-dark",
          "color": "#c084fc",
          "name": "Purple Dark"
        },
        {
          "slug": "blue-dark",
          "color": "#60a5fa",
          "name": "Blue Dark"
        }
      ]
    },
    "typography": {
      "fontFamilies": [
        {
          "fontFamily": "\"Fredoka\", sans-serif",
          "slug": "fredoka",
          "name": "Fredoka"
        }
      ],
      "fontSizes": [
        {
          "slug": "small",
          "size": "14px",
          "name": "Small"
        },
        {
          "slug": "medium",
          "size": "18px",
          "name": "Medium"
        },
        {
          "slug": "large",
          "size": "24px",
          "name": "Large"
        },
        {
          "slug": "x-large",
          "size": "36px",
          "name": "Extra Large"
        },
        {
          "slug": "xx-large",
          "size": "48px",
          "name": "XX Large"
        }
      ]
    },
    "layout": {
      "contentSize": "896px",
      "wideSize": "1152px"
    },
    "spacing": {
      "units": ["px", "em", "rem", "vh", "vw", "%"]
    }
  },
  "styles": {
    "color": {
      "background": "var(--wp--preset--color--base)",
      "text": "var(--wp--preset--color--contrast)"
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--fredoka)",
      "fontSize": "var(--wp--preset--font-size--medium)",
      "lineHeight": "1.75"
    },
    "elements": {
      "link": {
        "color": {
          "text": "var(--wp--preset--color--pink)"
        },
        ":hover": {
          "color": {
            "text": "var(--wp--preset--color--purple)"
          }
        }
      },
      "h1": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--xx-large)",
          "fontWeight": "700"
        }
      },
      "h2": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--x-large)",
          "fontWeight": "700"
        }
      },
      "h3": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--large)",
          "fontWeight": "600"
        }
      }
    }
  },
  "templateParts": [
    {
      "name": "header",
      "title": "Header",
      "area": "header"
    },
    {
      "name": "footer",
      "title": "Footer",
      "area": "footer"
    }
  ]
}
